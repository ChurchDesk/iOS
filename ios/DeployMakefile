BUILD_NUMBER=lastCompletedBuild
PRODUCT_NAME=ChurchDesk
JENKINS_HOST=http://10.0.1.2:8080
CONFIGURATION=Inhouse

all: clean download publish

download:
	mkdir pkg
	mkdir pkg/dist
	curl -o pkg/dist/$(PRODUCT_NAME).ipa $(JENKINS_HOST)/job/$(PRODUCT_NAME)/$(BUILD_NUMBER)/artifact/ios/ipa/$(CONFIGURATION)$(PRODUCT_NAME).ipa

publish:
	(cd pkg/dist && unzip $(PRODUCT_NAME).ipa && mv Payload ..)
	ship publish

clean:
	rm -rf pkg/


